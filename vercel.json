{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "DB_USER": "@db_user",
    "DB_HOST": "@db_host", 
    "DB_NAME": "@db_name",
    "DB_PASSWORD": "@db_password",
    "DB_PORT": "@db_port"
  }
}